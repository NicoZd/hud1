<UserControl x:Class="Hud1.Views.CustomControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Hud1.Views"
             xmlns:local="clr-namespace:Hud1.Views"
             mc:Ignorable="d"            
             d:DesignHeight="40" d:DesignWidth="300"
             >
    <Grid DataContext="{Binding Path=ViewModel, RelativeSource={RelativeSource AncestorType=local:CustomControl2}}">
        <views:GlowBorder >
            <Label Content="{Binding Path=Label}" Style="{DynamicResource ButtonLabel}" Foreground="{Binding Path=Foreground}"/>
        </views:GlowBorder>
    </Grid>
</UserControl>
