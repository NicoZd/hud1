<UserControl x:Class="Hud1.Views.ScrollPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Hud1.Controls"
             xmlns:views="clr-namespace:Hud1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Focusable="False"
             >
    <UserControl.Template>
        <ControlTemplate>
            <controls:DraggableScrollViewer Focusable="False" Style="{StaticResource PanelScrollViewer}" Margin="-10">
                <ContentPresenter Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}" Margin="10"/>
            </controls:DraggableScrollViewer>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
