<UserControl x:Class="Hud1.Views.Hud"
             x:Name="Self1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:foo="clr-namespace:Foo"
              xmlns:views="clr-namespace:Hud1.Views"
             xmlns:local="clr-namespace:Hud1.Views"
             mc:Ignorable="d"
             Loaded="OnWindowLoaded"             
             >
    <Grid DataContext="{Binding Path=ViewModel, RelativeSource={RelativeSource AncestorType=local:Hud}}" HorizontalAlignment="Left" Margin="0,0,0,0">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="3" Color="#008800" Opacity="0.5" BlurRadius="20" Direction="0" />
        </Grid.Effect>
        <views:GlassPanel>
            <StackPanel Margin="15,1,15,15">
                <Label Foreground="#ffbbffbb" Content="GUD - Game HUD" Padding="0,10,0,5" FontFamily="Cascadia Code" FontSize="22">
                    <Label.Effect>
                        <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                    </Label.Effect>
                </Label>

                <StackPanel Orientation="Vertical" Margin="-3,0,0,10">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Foreground" Value="#88bbffbb"/>
                            <Setter Property="Margin" Value="0,0,0,-10"/>
                        </Style>
                    </StackPanel.Resources>
                    <Label Content="Time: 8:23 PM"/>
                    <Label Content="Press F2 to open and close this window."/>
                    <Label Content="Use cursor keys to navigate and select."/>
                </StackPanel>
                <WrapPanel Orientation="Horizontal" Margin="-2,15,-2,0">
                    <WrapPanel.Resources>
                        <Style TargetType="{x:Type views:CustomControl2}">
                            <Setter Property="Margin" Value="2,0,2,0"/>
                        </Style>
                    </WrapPanel.Resources>
                    <views:CustomControl2 Label="GAMMA" Selected="{Binding Path=States[GAMMA_VISIBLE].Selected}"/>
                    <views:CustomControl2 Label="AUDIO" Selected="{Binding Path=States[AUDIO_VISIBLE].Selected}"/>
                    <views:CustomControl2 Label="MACRO" Selected="{Binding Path=States[MACRO_VISIBLE].Selected}"/>
                    <views:CustomControl2 Label="CROSSHAIR" Selected="{Binding Path=States[CROSSHAIR_VISIBLE].Selected}"/>
                    <views:CustomControl2 Label="MORE" Selected="{Binding Path=States[MORE_VISIBLE].Selected}"/>
                </WrapPanel>

                <Grid Visibility="{Binding Path=States[GAMMA_VISIBLE].Visibility}" Margin="0,50,0,0">
                    <StackPanel Margin="0,0,0,0" Orientation="Vertical">

                        <Label Foreground="#ffbbffbb" Content="GAMMA" Padding="0,0,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>

                        <StackPanel Uid="GammaContainer" Orientation="Horizontal" Margin="-2,2,0,0">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type views:CustomControl2}">
                                    <Setter Property="Margin" Value="2,0,2,0"/>
                                </Style>
                            </StackPanel.Resources>

                            <!--<views:CustomControl2 Label="1.0" Selected="{Binding Path=States[gamma-1.0].Selected}" />-->
                            <!--<views:CustomControl2 Label="1.1" Selected="{Binding Path=States[gamma-1.1].Selected}" />-->
                            <views:CustomControl2 Label="1.25"/>
                            <views:CustomControl2 Label="1.5"/>
                            <views:CustomControl2 Label="2.0"/>
                            <views:CustomControl2 Label="3.0"/>
                        </StackPanel>
                    </StackPanel>

                </Grid>

                <Grid Visibility="{Binding Path=States[AUDIO_VISIBLE].Visibility}">
                    <StackPanel Margin="0,25,0,0" foo:Spacing.Vertical="10">

                        <Label Foreground="#ffbbffbb" Content="AUDIO" Padding="0,0,0,20" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>

                        <Grid Background="{Binding Path=States[PLAYBACK_DEVICE].SelectedBackground}">

                            <Border BorderBrush="{Binding Path=States[PLAYBACK_DEVICE].SelectedBorder}" BorderThickness="1" Padding="0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="{Binding Path=States[PLAYBACK_DEVICE].SelectedBlurOpacity}" BlurRadius="10" />
                                </Border.Effect>
                                <StackPanel>
                                    <Label Foreground="#ffbbffbb" Content="PLAYBACK DEVICE" Padding="8,5,0,5" FontFamily="Cascadia Code" FontSize="12"/>

                                    <DockPanel Margin="3,0,3,5">
                                        <DockPanel.Resources>
                                            <Style TargetType="{x:Type views:CustomControl2}">
                                                <Setter Property="Margin" Value="2,0,2,0"/>
                                            </Style>
                                        </DockPanel.Resources>
                                        <views:CustomControl2 DockPanel.Dock="Left" Label="&lt;" Selected="{Binding Path=States[PLAYBACK_DEVICE].Selected}" Pressed="{Binding Path=States[PLAYBACK_DEVICE].SelectLeft}"/>
                                        <views:CustomControl2 DockPanel.Dock="Right" Label="&gt;" Selected="{Binding Path=States[PLAYBACK_DEVICE].Selected}" Pressed="{Binding Path=States[PLAYBACK_DEVICE].SelectRight}"/>
                                        <views:CustomControl2 Label="{Binding Path=AudioDeviceViewModel.DefaultPlaybackDeviceName}" Selected="{Binding Path=States[PLAYBACK_DEVICE].Selected}" />
                                    </DockPanel>

                                </StackPanel>
                            </Border>
                        </Grid>

                        <Border BorderBrush="{Binding Path=States[PLAYBACK_VOLUME].SelectedBorder}" BorderThickness="1" Padding="0">
                            <StackPanel Background="#66006600" Margin="0" >
                                <Label Foreground="#ffbbffbb" Content="MUTE" Padding="8,8,0,5" FontFamily="Cascadia Code" FontSize="14">
                                    <Label.Effect>
                                        <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                                    </Label.Effect>
                                </Label>
                                <DockPanel Margin="-2,0,0,0">
                                    <views:CustomControl2 DockPanel.Dock="Left" Label="&lt;" Selected="{Binding Path=States[PLAYBACK_VOLUME].SelectLeft}"/>
                                    <views:CustomControl2 DockPanel.Dock="Right" Label="&gt;" Selected="{Binding Path=States[PLAYBACK_VOLUME].SelectRight}"/>
                                    <views:CustomControl2 Label="{Binding Path=AudioDeviceViewModel.Volume.StringValue}" Selected="{Binding Path=States[PLAYBACK_VOLUME].Selected}" />
                                </DockPanel>
                            </StackPanel>
                        </Border>


                        <Border BorderBrush="{Binding Path=States[PLAYBACK_MUTE].SelectedBorder}" BorderThickness="1" Padding="0">
                            <StackPanel Background="#66006600" Margin="0" >
                                <Label Foreground="#ffbbffbb" Content="MUTE" Padding="0,0,0,5" FontFamily="Cascadia Code" FontSize="16">
                                    <Label.Effect>
                                        <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                                    </Label.Effect>
                                </Label>
                                <Grid Margin="-2,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <views:CustomControl2  Grid.Column="0" Label="ON" Selected="{Binding Path=States[PLAYBACK_MUTE].SelectLeft}"/>
                                    <views:CustomControl2 Grid.Column="1" Label="OFF" Selected="{Binding Path=States[PLAYBACK_MUTE].SelectRight}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Path=States[MACRO_VISIBLE].Visibility}">
                    <StackPanel Margin="0,50,0,0">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type views:CustomControl2}">
                                <Setter Property="Margin" Value="0,2,0,2"/>
                            </Style>
                        </StackPanel.Resources>
                        <Label Foreground="#ffbbffbb" Content="MOUSE MACRO" Padding="0,0,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>
                        <views:CustomControl2 Label="Hold Left"/>
                        <views:CustomControl2 Label="Repeat Left"/>
                        <Label Foreground="#ffbbffbb" Content="KEY MACRO" Padding="0,20,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>
                        <views:CustomControl2 Label="Hold W"/>
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Path=States[CROSSHAIR_VISIBLE].Visibility}">
                    <StackPanel Margin="0,50,0,0" Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type views:CustomControl2}">
                                <Setter Property="Margin" Value="0,2,0,2"/>
                            </Style>
                        </StackPanel.Resources>
                        <Label Foreground="#ffbbffbb" Content="CROSSHAIR" Padding="0,0,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>
                        <!--<views:CustomControl2 Label="ON/OFF" Selected="{Binding Path=States[cross-visible].Selected}" />
                        <views:CustomControl2 Label="C" Selected="{Binding Path=States[cross-color].Selected}"/>
                        <views:CustomControl2 Label="F" Selected="{Binding Path=States[cross-form].Selected}"/>
                        <views:CustomControl2 Label="S" Selected="{Binding Path=States[cross-size].Selected}"/>-->
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Path=States[MORE_VISIBLE].Visibility}" Margin="0,0,0,0">
                    <StackPanel Margin="0,50,0,0">

                        <Label Foreground="#ffbbffbb" Content="FUNCTIONS" Padding="0,0,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>

                        <StackPanel Margin="0,0,0,0" Orientation="Vertical" >
                            <DockPanel Margin="-2,0,0,0">
                                <DockPanel.Resources>
                                    <Style TargetType="{x:Type views:CustomControl2}">
                                        <Setter Property="Margin" Value="2,2,2,0"/>
                                    </Style>
                                </DockPanel.Resources>
                                <views:CustomControl2 DockPanel.Dock="Right" Label=">" Selected="{Binding Path=States[EXIT].SelectRight}"/>
                                <views:CustomControl2 Label="EXIT" Selected="{Binding Path=States[EXIT].Selected}" />
                            </DockPanel>
                        </StackPanel>

                        <Label Foreground="#ffbbffbb" Content="HELP" Padding="0,15,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>

                        <StackPanel Orientation="Vertical" Margin="-3,0,0,10">
                            <Label Content="Press F2 or ALT-S, ALT-F or ALT-L to open and close this window." Foreground="#ffbbffbb"/>
                            <Label Content="Use cursor keys to navigate and select." Foreground="#ffbbffbb"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </views:GlassPanel>
    </Grid>
</UserControl>
