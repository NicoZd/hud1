<UserControl x:Class="Hud1.Views.Hud"
             x:Name="Self1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Hud1.Views"
             xmlns:local="clr-namespace:Hud1.Views"
             mc:Ignorable="d"
             Loaded="OnWindowLoaded"             
             >

    <Grid DataContext="{Binding Path=ViewModel, RelativeSource={RelativeSource AncestorType=local:Hud}}" HorizontalAlignment="Right" Margin="0,0,0,0">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="3" Color="#008800" Opacity="0.5" BlurRadius="20" Direction="0" />
        </Grid.Effect>
        <views:GlassPanel>
            <StackPanel Margin="15,1,15,15">
                <Label Content="Drako HUD" Style="{DynamicResource TitleLabel}" />

                <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                    <Label Content="Press F2 to open and close this window." Style="{DynamicResource InfoLabelSecondary}" />
                    <Label Content="Use cursor keys to navigate and select." Style="{DynamicResource InfoLabelSecondary}" />
                </StackPanel>

                <WrapPanel Orientation="Horizontal" Margin="-2,15,-2,0" views:Spacing.Horizontal="4">
                    <views:GlowBorderLabel Label="GAMMA" 
                                           Selected="{Binding Path=States[MENU_GAMMA].Selected}"
                                           Highlighted="{Binding Path=States[GAMMA_VISIBLE].Selected}"/>
                    <views:GlowBorderLabel Label="AUDIO" 
                                           Selected="{Binding Path=States[MENU_AUDIO].Selected}"
                                           Highlighted="{Binding Path=States[AUDIO_VISIBLE].Selected}"/>
                    <views:GlowBorderLabel Label="MACRO" 
                                           Selected="{Binding Path=States[MENU_MACRO].Selected}"
                                           Highlighted="{Binding Path=States[MACRO_VISIBLE].Selected}"/>
                    <views:GlowBorderLabel Label="CROSSHAIR" 
                                           Selected="{Binding Path=States[MENU_CROSSHAIR].Selected}"
                                           Highlighted="{Binding Path=States[CROSSHAIR_VISIBLE].Selected}"/>
                    <views:GlowBorderLabel Label="MORE" 
                                           Selected="{Binding Path=States[MENU_MORE].Selected}"
                                           Highlighted="{Binding Path=States[MORE_VISIBLE].Selected}"/>
                </WrapPanel>

                <Separator Margin="-3,12,-3,25" Background="{DynamicResource BrushSeparator}"/>

                <TextBlock FontFamily="{DynamicResource FontFamily}" Foreground="{DynamicResource BrushInfoSecondary}" 
                    FontSize="12" Text="{Binding State.Hint}"/>

                <Grid Visibility="{Binding Path=States[GAMMA_VISIBLE].Visibility}" >
                    <StackPanel views:Spacing.Vertical="8">
                        <Label Content="Gamma" Style="{DynamicResource TitleContent}"/>
                        <views:SelectionControl NavigationState="{Binding Path=States[GAMMA]}" />
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Path=States[AUDIO_VISIBLE].Visibility}">
                    <StackPanel views:Spacing.Vertical="8">

                        <Label Content="Playback" Style="{DynamicResource TitleContent}"/>

                        <views:SelectionControl NavigationState="{Binding Path=States[PLAYBACK_DEVICE]}" />
                        <views:SelectionControl NavigationState="{Binding Path=States[PLAYBACK_VOLUME]}" />
                        <views:SelectionControl NavigationState="{Binding Path=States[PLAYBACK_MUTE]}" />

                        <Label Content="Capture" Style="{DynamicResource TitleContent}"/>

                        <views:SelectionControl NavigationState="{Binding Path=States[CAPTURE_DEVICE]}" />
                        <views:SelectionControl NavigationState="{Binding Path=States[CAPTURE_VOLUME]}" />
                        <views:SelectionControl NavigationState="{Binding Path=States[CAPTURE_MUTE]}" />

                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Path=States[MACRO_VISIBLE].Visibility}">
                    <StackPanel Margin="0,50,0,0">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type views:GlowBorderLabel}">
                                <Setter Property="Margin" Value="0,2,0,2"/>
                            </Style>
                        </StackPanel.Resources>
                        <Label Content="MOUSE MACRO" Style="{DynamicResource TitleContent}"/>
                        <views:GlowBorderLabel Label="Hold Left"/>
                        <views:GlowBorderLabel Label="Repeat Left"/>
                        <Label  Content="KEY MACRO" Style="{DynamicResource TitleContent}"/>
                        <views:GlowBorderLabel Label="Hold W"/>
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Path=States[CROSSHAIR_VISIBLE].Visibility}">
                    <StackPanel Margin="0,50,0,0" Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type views:GlowBorderLabel}">
                                <Setter Property="Margin" Value="0,2,0,2"/>
                            </Style>
                        </StackPanel.Resources>
                        <Label Content="CROSSHAIR" Style="{DynamicResource TitleContent}"/>
                        <!--<views:GlowBorderLabel Label="ON/OFF" Selected="{Binding Path=States[cross-visible].Selected}" />
                        <views:GlowBorderLabel Label="C" Selected="{Binding Path=States[cross-color].Selected}"/>
                        <views:GlowBorderLabel Label="F" Selected="{Binding Path=States[cross-form].Selected}"/>
                        <views:GlowBorderLabel Label="S" Selected="{Binding Path=States[cross-size].Selected}"/>-->
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Path=States[MORE_VISIBLE].Visibility}" Margin="0,0,0,0">
                    <StackPanel Margin="0,50,0,0">

                        <Label Content="FUNCTIONS" Style="{DynamicResource TitleContent}"/>

                        <StackPanel Margin="0,0,0,0" Orientation="Vertical" >
                            <DockPanel views:MarginSetter.Margin="4,0,0,0">
                                <views:GlowBorderLabel DockPanel.Dock="Right" Label=">" Selected="{Binding Path=States[EXIT].SelectRight}"/>
                                <views:GlowBorderLabel Label="EXIT" Selected="{Binding Path=States[EXIT].Selected}" />
                            </DockPanel>
                        </StackPanel>

                        <Label Content="STYLE" Style="{DynamicResource TitleContent}"/>

                        <views:SelectionControl NavigationState="{Binding Path=States[STYLE]}" />

                        <Label Content="HELP" Style="{DynamicResource TitleContent}"/>

                        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                            <Label Content="Keys to open and close this window:" Style="{DynamicResource InfoLabelSecondary}" />
                            <Label Content="- F2, ALT-S, ALT-F or ALT-L" Style="{DynamicResource InfoLabelSecondary}" />
                            <Label Content="Use cursor keys to navigate and select." Style="{DynamicResource InfoLabelSecondary}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </views:GlassPanel>
    </Grid>
</UserControl>
