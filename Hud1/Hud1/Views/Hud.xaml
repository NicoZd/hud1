<UserControl x:Class="Hud1.Views.Hud"
             x:Name="Self1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Hud1.Views"
             xmlns:local="clr-namespace:Hud1.Views"
             mc:Ignorable="d"
             Loaded="OnWindowLoaded"             
             >

    <Grid DataContext="{Binding Path=ViewModel, RelativeSource={RelativeSource AncestorType=local:Hud}}" HorizontalAlignment="Right" Margin="0,0,0,0">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="3" Color="#008800" Opacity="0.5" BlurRadius="20" Direction="0" />
        </Grid.Effect>
        <views:GlassPanel>
            <StackPanel Margin="15,1,15,15">
                <Label Content="GUD - Game HUD" Style="{DynamicResource TitleLabel}" />

                <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                    <Label Content="Time: 8:23 PM" Style="{DynamicResource InfoLabel}" />
                    <Label Content="Press F2 to open and close this window." Style="{DynamicResource InfoLabel}" />
                    <Label Content="Use cursor keys to navigate and select." Style="{DynamicResource InfoLabel}" />
                </StackPanel>

                <WrapPanel Orientation="Horizontal" Margin="-2,15,-2,0" views:Spacing.Horizontal="4">
                    <views:GlowBorderLabel Label="GAMMA" Selected="{Binding Path=States[GAMMA_VISIBLE].Selected}"/>
                    <views:GlowBorderLabel Label="AUDIO" Selected="{Binding Path=States[AUDIO_VISIBLE].Selected}"/>
                    <views:GlowBorderLabel Label="MACRO" Selected="{Binding Path=States[MACRO_VISIBLE].Selected}"/>
                    <views:GlowBorderLabel Label="CROSSHAIR" Selected="{Binding Path=States[CROSSHAIR_VISIBLE].Selected}"/>
                    <views:GlowBorderLabel Label="MORE" Selected="{Binding Path=States[MORE_VISIBLE].Selected}"/>
                </WrapPanel>

                <Separator Margin="0,15,0,0" Background="{DynamicResource SeparatorColor}"/>

                <Grid Visibility="{Binding Path=States[GAMMA_VISIBLE].Visibility}" Margin="0,50,0,0">
                    <StackPanel Margin="0,0,0,0" Orientation="Vertical">

                        <Label Foreground="#ffbbffbb" Content="GAMMA" Padding="0,0,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>

                        <StackPanel Uid="GammaContainer" Orientation="Horizontal" Margin="-2,2,0,0">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type views:GlowBorderLabel}">
                                    <Setter Property="Margin" Value="2,0,2,0"/>
                                </Style>
                            </StackPanel.Resources>

                            <!--<views:GlowBorderLabel Label="1.0" Selected="{Binding Path=States[gamma-1.0].Selected}" />-->
                            <!--<views:GlowBorderLabel Label="1.1" Selected="{Binding Path=States[gamma-1.1].Selected}" />-->
                            <views:GlowBorderLabel Label="1.25"/>
                            <views:GlowBorderLabel Label="1.5"/>
                            <views:GlowBorderLabel Label="2.0"/>
                            <views:GlowBorderLabel Label="3.0"/>
                        </StackPanel>
                    </StackPanel>

                </Grid>

                <Grid Visibility="{Binding Path=States[AUDIO_VISIBLE].Visibility}">
                    <StackPanel Margin="0,25,0,0" views:Spacing.Vertical="10">

                        <Label Foreground="#ffbbffbb" Content="AUDIO" Padding="0,0,0,20" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>

                        <views:SelectionControl NavigationState="{Binding Path=States[PLAYBACK_DEVICE]}" />
                        <views:SelectionControl NavigationState="{Binding Path=States[PLAYBACK_VOLUME]}" />
                        <views:SelectionControl NavigationState="{Binding Path=States[PLAYBACK_MUTE]}" />

                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Path=States[MACRO_VISIBLE].Visibility}">
                    <StackPanel Margin="0,50,0,0">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type views:GlowBorderLabel}">
                                <Setter Property="Margin" Value="0,2,0,2"/>
                            </Style>
                        </StackPanel.Resources>
                        <Label Foreground="#ffbbffbb" Content="MOUSE MACRO" Padding="0,0,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>
                        <views:GlowBorderLabel Label="Hold Left"/>
                        <views:GlowBorderLabel Label="Repeat Left"/>
                        <Label Foreground="#ffbbffbb" Content="KEY MACRO" Padding="0,20,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>
                        <views:GlowBorderLabel Label="Hold W"/>
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Path=States[CROSSHAIR_VISIBLE].Visibility}">
                    <StackPanel Margin="0,50,0,0" Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type views:GlowBorderLabel}">
                                <Setter Property="Margin" Value="0,2,0,2"/>
                            </Style>
                        </StackPanel.Resources>
                        <Label Foreground="#ffbbffbb" Content="CROSSHAIR" Padding="0,0,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>
                        <!--<views:GlowBorderLabel Label="ON/OFF" Selected="{Binding Path=States[cross-visible].Selected}" />
                        <views:GlowBorderLabel Label="C" Selected="{Binding Path=States[cross-color].Selected}"/>
                        <views:GlowBorderLabel Label="F" Selected="{Binding Path=States[cross-form].Selected}"/>
                        <views:GlowBorderLabel Label="S" Selected="{Binding Path=States[cross-size].Selected}"/>-->
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Path=States[MORE_VISIBLE].Visibility}" Margin="0,0,0,0">
                    <StackPanel Margin="0,50,0,0">

                        <Label Foreground="#ffbbffbb" Content="FUNCTIONS" Padding="0,0,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>

                        <StackPanel Margin="0,0,0,0" Orientation="Vertical" >
                            <DockPanel views:MarginSetter.Margin="4,0,0,0">
                                <views:GlowBorderLabel DockPanel.Dock="Right" Label=">" Selected="{Binding Path=States[EXIT].SelectRight}"/>
                                <views:GlowBorderLabel Label="EXIT" Selected="{Binding Path=States[EXIT].Selected}" />
                            </DockPanel>
                        </StackPanel>

                        <Label Foreground="#ffbbffbb" Content="STYLE" Padding="0,0,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>

                        <views:SelectionControl NavigationState="{Binding Path=States[STYLE]}" />
                        
                        <Label Foreground="#ffbbffbb" Content="HELP" Padding="0,15,0,5" FontFamily="Cascadia Code" FontSize="16">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                            </Label.Effect>
                        </Label>

                        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                            <Label Content="Keys to open and close this window:" Style="{DynamicResource InfoLabel}" />
                            <Label Content="- F2, ALT-S, ALT-F or ALT-L" Style="{DynamicResource InfoLabel}" />
                            <Label Content="Use cursor keys to navigate and select." Style="{DynamicResource InfoLabel}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </views:GlassPanel>
    </Grid>
</UserControl>
