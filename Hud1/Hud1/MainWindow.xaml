<Window x:Class="Hud1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hud1"
        mc:Ignorable="d"
        Title="MainWindow"
        AllowsTransparency="True"
        WindowStyle="None"
        Topmost="True"
        Width="640"
        Height="400"
        Loaded="OnWindowLoaded"
        GotFocus="OnWindowGotFocus"
        LostFocus="OnWindowLostFocus"
        Activated="OnWindowActivated"
        Deactivated="OnWindowDeactivated">
    <Window.Background>
        <SolidColorBrush Color="#FFB0B0B0" Opacity="0.1" />
    </Window.Background>
    <Grid>
        <Canvas Width="50" Height="50">
            <Line X1="0" Y1="0" X2="50" Y2="50" Stroke="Red" StrokeThickness="{Binding Path=ddd, Mode=OneWay}" />
            <Line X1="50" Y1="0" X2="0" Y2="50" Stroke="Red" StrokeThickness="1" />
            <Line X1="0" Y1="0" X2="0" Y2="50" Stroke="Red" StrokeThickness="4" />
        </Canvas>
    </Grid>
</Window>
