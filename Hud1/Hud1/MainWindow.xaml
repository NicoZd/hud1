<Window x:Class="Hud1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Hud1.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        AllowsTransparency="True"
        WindowStyle="None"
        Topmost="True"
        ShowInTaskbar="false"
        Activated="OnWindowActivated"
        Loaded="OnWindowLoaded"
        Unloaded="OnWindowUnloaded"
        >

    <Window.Background>
        <SolidColorBrush Color="Transparent"/>
    </Window.Background>

    <Canvas>
        <Canvas Left="0.0" Top="0" x:Name="MyCursorCanvas" Width="12" Height="12" IsHitTestVisible="false" Background="#00000000" Margin="22,0,22,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Line X1="0" Y1="0" X2="12" Y2="12" Stroke="#ffff0000" StrokeThickness="1"/>
            <Line X1="12" Y1="0" X2="0" Y2="12" Stroke="#ffff0000" StrokeThickness="1" />
        </Canvas>

        <Grid>
            <views:Hud Visibility="{Binding Path=HudVisibility}"/>
        </Grid>
        <!--<StackPanel>
            <Label Content="{Binding Active}" Foreground="White"/>
            <Label Content="{Binding Bg}" Foreground="White"/>
        </StackPanel>-->
    </Canvas>
</Window>
