<UserControl x:Class="Hud1.Controls.CustomControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:Hud1.Converters"
             xmlns:local="clr-namespace:Hud1.Controls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:SelectedToBackground x:Key="SelectedToBackground"/>
    </UserControl.Resources>
    <Grid Background="{Binding Path=Selected, Mode=OneWay, Converter={StaticResource SelectedToBackground}}">
        <Border BorderBrush="#6600ff00" BorderThickness="1" />
        <Label Foreground="#ff99ff66" Name="PART_Label" Content="{Binding Path=Label, Mode=OneWay}" Padding="15,5,15,7">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
            </Label.Effect>
        </Label>
    </Grid>
</UserControl>
