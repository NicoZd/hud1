<UserControl x:Class="Hud1.Controls.CustomControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:Hud1.Converters"
             xmlns:local="clr-namespace:Hud1.Controls"
             mc:Ignorable="d"            
             d:DesignHeight="40" d:DesignWidth="300"
             >
    <Grid x:Name="LayoutRoot" DataContext="{Binding Path=Model, RelativeSource={RelativeSource AncestorType=local:CustomControl2}}">
        <Grid Background="{Binding Path=Background}" >
            <Border BorderBrush="#6600ff00" BorderThickness="1" />
            <Label Foreground="#ffbbffbb" Content="{Binding Path=Label}" Padding="15,5,15,5" FontFamily="Cascadia Code" FontSize="12">
                <Label.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="#ffff00" Opacity="0.7" BlurRadius="10" />
                </Label.Effect>
            </Label>
        </Grid>
    </Grid>
</UserControl>
